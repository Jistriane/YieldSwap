  "workspaces": [
    "apps/*",
    "packages/*",
    "libs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:api": "cd apps/api && pnpm build",
    "build:functions": "echo 'Netlify functions jÃ¡ estÃ£o prontas'",
